<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Calcolo Pompa di Calore</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 0; padding: 0; background: linear-gradient(135deg, #f8fafc, #ffffff); color: #333; overflow-x: hidden; }
    .container { max-width: 500px; margin: auto; padding: 20px; }
    .card { background: #fff; padding: 20px; border-radius: 16px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-top: 20px; transition: opacity 0.4s ease, transform 0.4s ease; }
    .btn { display: block; width: 100%; padding: 12px; margin: 8px 0; border: none; border-radius: 10px; font-size: 16px; cursor: pointer; transition: transform 0.2s ease, background 0.2s ease; }
    .btn:active { transform: scale(0.95); }
    .btn-primary { background: #0ea5e9; color: #fff; }
    .btn-primary:hover { background: #0284c7; }
    .btn-secondary { background: #f1f5f9; }
    .btn-secondary:hover { background: #e2e8f0; }
    .hidden { display: none; }
    .result { background: #f9fafb; padding: 15px; border-radius: 10px; margin-top: 15px; animation: fadeIn 0.5s ease; }
    h1 { font-size: 24px; margin-bottom: 10px; }
    .emoji { font-size: 20px; margin-right: 6px; }
    input { width: 100%; padding: 10px; margin-top: 8px; border: 1px solid #ccc; border-radius: 8px; font-size: 16px; }
    @keyframes fadeIn { from {opacity: 0; transform: translateY(10px);} to {opacity: 1; transform: translateY(0);} }
  </style>
</head>
<body>
  <div class="container">
    <div class="card" id="card">
      <h1>‚ö° Calcolatore Pompa di Calore</h1>
      <div id="step1">
        <p><span class="emoji">üè†</span> Che tipo di abitazione hai?</p>
        <button class="btn btn-primary" onclick="nextStep('Appartamento')">Appartamento</button>
        <button class="btn btn-primary" onclick="nextStep('Condominio')">Condominio</button>
        <button class="btn btn-primary" onclick="nextStep('Villetta')">Villetta</button>
      </div>

      <div id="step2" class="hidden">
        <p><span class="emoji">üî•</span> Che tipo di impianto hai?</p>
        <button class="btn btn-primary" onclick="chooseHeating('pavimento')">Riscaldamento a pavimento</button>
        <button class="btn btn-primary" onclick="chooseHeating('radiatori')">Radiatori</button>
        <button class="btn btn-secondary" onclick="goBack(1)">‚¨ÖÔ∏è Indietro</button>
      </div>

      <div id="step3" class="hidden">
        <div id="input-area" class="hidden">
          <p><span class="emoji">üìê</span> Inserisci la superficie totale (m¬≤)</p>
          <input type="number" id="area" placeholder="Es. 100">
          <button class="btn btn-primary" onclick="calculatePavimento()">Calcola</button>
          <button class="btn btn-secondary" onclick="goBack(2)">‚¨ÖÔ∏è Indietro</button>
        </div>
        <div id="input-radiatori" class="hidden">
          <p><span class="emoji">üîß</span> Inserisci il numero totale di elementi del radiatore</p>
          <input type="number" id="elements" placeholder="Es. 20">
          <button class="btn btn-primary" onclick="calculateRadiatori()">Calcola</button>
          <button class="btn btn-secondary" onclick="goBack(2)">‚¨ÖÔ∏è Indietro</button>
        </div>
      </div>

      <div id="result" class="hidden result"></div>
      <div id="restart" class="hidden">
        <button class="btn btn-secondary" onclick="restart()">üîÑ Ricomincia</button>
      </div>
    </div>
  </div>

  <script>
    let dwelling = "";
    let heatingType = "";

    function transitionTo(stepId) {
      const card = document.getElementById('card');
      card.style.opacity = 0;
      card.style.transform = 'translateY(20px)';
      setTimeout(() => {
        document.querySelectorAll('#step1, #step2, #step3, #result').forEach(el => el.classList.add('hidden'));
        document.getElementById(stepId).classList.remove('hidden');
        card.style.opacity = 1;
        card.style.transform = 'translateY(0)';
      }, 300);
    }

    function nextStep(choice) {
      dwelling = choice;
      transitionTo('step2');
    }

    function chooseHeating(type) {
      heatingType = type;
      transitionTo('step3');
      if (type === 'pavimento') {
        document.getElementById('input-area').classList.remove('hidden');
        document.getElementById('input-radiatori').classList.add('hidden');
      } else {
        document.getElementById('input-radiatori').classList.remove('hidden');
        document.getElementById('input-area').classList.add('hidden');
      }
    }

    function calculatePavimento() {
      const area = Number(document.getElementById('area').value);
      const wPerSqm = 70;
      const safetyFactor = 1.2;
      const totalW = area * wPerSqm;
      const totalKW = totalW / 1000;
      const recommended = Math.ceil(totalKW * safetyFactor * 2) / 2;
      showResult(`üè† Abitazione: ${dwelling}<br>üî• Impianto: Pavimento<br>üìê Superficie: ${area} m¬≤<br>‚ö° Potenza richiesta: ${totalKW.toFixed(2)} kW<br>‚úÖ PDC consigliata: ${recommended.toFixed(1)} kW`);
    }

    function calculateRadiatori() {
      const elements = Number(document.getElementById('elements').value);
      const powerElement = 150;
      const correctionFactor = 0.51475;
      const powerPerElement = powerElement * correctionFactor;
      const safetyFactor = 1.2;
      const totalW = elements * powerPerElement;
      const totalKW = totalW / 1000;
      const recommended = Math.ceil(totalKW * safetyFactor * 2) / 2;
      showResult(`üè† Abitazione: ${dwelling}<br>üî• Impianto: Radiatori<br>üîß Elementi: ${elements}<br>‚ö° Potenza richiesta: ${totalKW.toFixed(2)} kW<br>‚úÖ PDC consigliata: ${recommended.toFixed(1)} kW`);
    }

    function showResult(html) {
      transitionTo('result');
      const resultDiv = document.getElementById('result');
      resultDiv.innerHTML = html;
      document.getElementById('restart').classList.remove('hidden');
    }

    function goBack(step) {
      if (step === 1) transitionTo('step1');
      if (step === 2) transitionTo('step2');
    }

    function restart() {
      dwelling = "";
      heatingType = "";
      document.getElementById('area').value = "";
      document.getElementById('elements').value = "";
      document.getElementById('restart').classList.add('hidden');
      transitionTo('step1');
    }
  </script>
</body>
</html>
